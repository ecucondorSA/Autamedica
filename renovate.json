{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "timezone": "America/Argentina/Buenos_Aires",
  "schedule": ["before 6am on monday"],
  "prConcurrentLimit": 3,
  "prHourlyLimit": 2,
  "rangeStrategy": "bump",
  "semanticCommits": "enabled",
  "semanticCommitType": "chore",
  "semanticCommitScope": "deps",
  "commitMessagePrefix": "üîß ",
  "commitMessageAction": "update",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "to {{newVersion}}",
  "labels": ["dependencies", "auto-merge"],
  "reviewersFromCodeOwners": true,
  "packageRules": [
    {
      "description": "Group minor and patch updates",
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "non-major dependencies",
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "merge"
    },
    {
      "description": "Major updates require manual review",
      "matchManagers": ["npm"],
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "labels": ["dependencies", "major-update", "needs-review"]
    },
    {
      "description": "Security updates - high priority",
      "matchPackagePatterns": ["*"],
      "matchUpdateTypes": ["patch"],
      "matchCurrentVersion": "!/^0/",
      "vulnerabilityAlerts": true,
      "labels": ["security", "dependencies"],
      "prPriority": 10,
      "automerge": true
    },
    {
      "description": "DevDependencies - auto-merge minor/patch",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "description": "Critical medical packages - manual review always",
      "matchPackagePatterns": ["*medical*", "*health*", "*hipaa*"],
      "automerge": false,
      "labels": ["medical", "critical", "needs-review"],
      "reviewers": ["@autamedica/medical", "@autamedica/security"]
    },
    {
      "description": "Testing frameworks",
      "matchPackagePatterns": ["*test*", "vitest", "playwright", "jest"],
      "groupName": "testing tools",
      "automerge": true
    },
    {
      "description": "Build tools",
      "matchPackagePatterns": ["turbo", "vite", "webpack", "rollup", "esbuild"],
      "groupName": "build tools",
      "automerge": false,
      "labels": ["build", "needs-testing"]
    },
    {
      "description": "React ecosystem",
      "matchPackagePatterns": ["react", "@types/react"],
      "groupName": "React",
      "automerge": false
    },
    {
      "description": "Next.js ecosystem",
      "matchPackagePatterns": ["next", "@next/*"],
      "groupName": "Next.js",
      "automerge": false
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security", "vulnerability"],
    "automerge": true,
    "automergeType": "pr"
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 6am on monday"],
    "commitMessageAction": "refresh",
    "commitMessageTopic": "lock file",
    "automerge": true
  },
  "prBodyTemplate": "## üîß Dependency Update\n\n{{{table}}}\n\n{{{notes}}}\n\n### üîç Release Notes\n\n{{{changelogs}}}\n\n---\n\n**ü§ñ Auto-generated by Renovate**",
  "prTitle": "üîß {{semanticCommitType}}{{#if semanticCommitScope}}({{semanticCommitScope}}){{/if}}: {{commitMessageAction}} {{commitMessageTopic}} {{commitMessageExtra}}",
  "ignorePaths": [
    "**/node_modules/**",
    "**/dist/**",
    "**/.next/**",
    "**/coverage/**"
  ]
}