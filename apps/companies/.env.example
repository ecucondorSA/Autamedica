# ====================================================================
# AutaMédica Companies App - Variables de Entorno
# Portal empresarial y marketplace médico
# ====================================================================

# 🌐 URLs de Aplicaciones (REQUERIDAS para middleware de redirección)
NEXT_PUBLIC_APP_URL=https://autamedica.com
NEXT_PUBLIC_PATIENTS_URL=https://patients.autamedica.com
NEXT_PUBLIC_DOCTORS_URL=https://doctors.autamedica.com
NEXT_PUBLIC_COMPANIES_URL=https://companies.autamedica.com

# 🔐 Supabase Configuración
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# 🍪 Autenticación Multi-Dominio
AUTH_COOKIE_DOMAIN=.autamedica.com

# ⚙️ Next.js Configuración
NODE_ENV=development
PORT=3003

# 🏢 Configuración Específica de Empresas
NEXT_PUBLIC_COMPANY_PORTAL_ENABLED=true
NEXT_PUBLIC_EMPLOYEE_MANAGEMENT_ENABLED=true
NEXT_PUBLIC_CORPORATE_HEALTH_ENABLED=true

# 💼 Marketplace Médico
NEXT_PUBLIC_MARKETPLACE_ENABLED=true
NEXT_PUBLIC_CRISIS_MANAGEMENT_ENABLED=true
NEXT_PUBLIC_HOSPITAL_REDISTRIBUTION_ENABLED=true

# 💳 Pagos y Facturación
MERCADOPAGO_ACCESS_TOKEN=your_mercadopago_access_token
MERCADOPAGO_WEBHOOK_SECRET=your_mercadopago_webhook_secret
MERCADOPAGO_TEST_ACCESS_TOKEN=your_mercadopago_test_token
MERCADOPAGO_WEBHOOK_URL=https://companies.autamedica.com/api/webhooks/mercadopago

# 📞 Comunicaciones Empresariales
WHATSAPP_BUSINESS_TOKEN=your_whatsapp_business_token
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_whatsapp_verify_token

# 🔒 Compliance y Auditoría
AUDIT_HASH_CHAIN_ENABLED=true
ENCRYPTION_KEY_ROTATION_DAYS=30
DATA_RETENTION_DAYS=2555
AUDIT_LOG_RETENTION_DAYS=365

# 📊 Analytics y Monitoring
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_for_companies
NEXT_PUBLIC_PROMETHEUS_ENABLED=true

# 🎯 Feature Flags para Empresas
NEXT_PUBLIC_MARKETPLACE_ENABLED=true
NEXT_PUBLIC_WHATSAPP_BUSINESS_ENABLED=true
NEXT_PUBLIC_ADMIN_PANEL_ENABLED=true
NEXT_PUBLIC_DATABASE_ADMIN_ENABLED=false
NEXT_PUBLIC_AUDIT_LOGS_ENABLED=true