# ====================================================================
# AutaMédica Patients App - Variables de Entorno
# Portal para pacientes
# ====================================================================

# 🌐 URLs de Aplicaciones (REQUERIDAS para middleware de redirección)
NEXT_PUBLIC_APP_URL=https://autamedica.com
NEXT_PUBLIC_PATIENTS_URL=https://patients.autamedica.com
NEXT_PUBLIC_DOCTORS_URL=https://doctors.autamedica.com
NEXT_PUBLIC_COMPANIES_URL=https://companies.autamedica.com

# 🔗 Base URL para callbacks de autenticación
NEXT_PUBLIC_BASE_URL=https://patients.autamedica.com
NEXT_PUBLIC_AUTH_CALLBACK_URL=https://patients.autamedica.com/auth/callback

# 🔐 Supabase Configuración
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# 🍪 Autenticación Multi-Dominio
AUTH_COOKIE_DOMAIN=.autamedica.com

# ⚙️ Next.js Configuración
NODE_ENV=development
PORT=3002

# 🩺 Configuración Específica de Pacientes
NEXT_PUBLIC_PATIENT_PORTAL_ENABLED=true
NEXT_PUBLIC_TELEMEDICINE_ENABLED=true
NEXT_PUBLIC_PRESCRIPTION_MANAGEMENT_ENABLED=true

# 📊 Analytics y Monitoring
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_for_patients

# 🎯 Feature Flags para Pacientes
NEXT_PUBLIC_AI_PREDICTOR_ENABLED=false
NEXT_PUBLIC_PATIENT_CRYSTAL_BALL_ENABLED=false
NEXT_PUBLIC_DIGITAL_PRESCRIPTION_ENABLED=true
NEXT_PUBLIC_IOT_SENSORS_ENABLED=false