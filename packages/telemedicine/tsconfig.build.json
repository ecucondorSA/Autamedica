{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": false,
    "noEmit": false,
    "emitDeclarationOnly": false
  },
  "references": [
    { "path": "../shared" },
    { "path": "../types" }
  ],
  "include": ["src"],
  "exclude": ["src/**/*.test.ts", "src/**/*.test.tsx", "dist", "node_modules", "**/*.spec.ts"]
}
