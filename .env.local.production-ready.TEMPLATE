# ===============================================
# AUTAMEDICA - CONFIGURACIÓN DE PRODUCCIÓN
# ===============================================
# Copiar a .env.local y completar con valores reales
# cp .env.local.production-ready.TEMPLATE .env.local

# Ambiente
NODE_ENV=production
NEXT_PUBLIC_ENV=production

# ===============================================
# SUPABASE - Producción
# ===============================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# ===============================================
# FEATURE FLAGS - PRODUCCIÓN (SIN MOCKS)
# ===============================================
NEXT_PUBLIC_USE_MOCK_VIDEO=false
NEXT_PUBLIC_USE_MOCK_MEDICAL_DATA=false
NEXT_PUBLIC_USE_MOCK_AI=false

# ===============================================
# LIVEKIT - Video Calling Real
# ===============================================
NEXT_PUBLIC_USE_LIVEKIT=true
NEXT_PUBLIC_LIVEKIT_URL=wss://your-project.livekit.cloud
LIVEKIT_API_KEY=your-api-key-here
LIVEKIT_API_SECRET=your-api-secret-here

# ===============================================
# AI SERVICES - Ambos Proveedores Configurados
# ===============================================

# Google Gemini AI (Activo)
GOOGLE_AI_API_KEY=your-google-ai-key-here

# Anthropic Claude (Configurar si se desea usar)
# ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Proveedor preferido: 'google' | 'anthropic' | 'auto'
NEXT_PUBLIC_AI_PROVIDER=google

# ===============================================
# URLs de Aplicaciones
# ===============================================
NEXT_PUBLIC_WEB_APP_URL=https://www.autamedica.com
NEXT_PUBLIC_DOCTORS_URL=https://doctors.autamedica.com
NEXT_PUBLIC_PATIENTS_URL=https://patients.autamedica.com
NEXT_PUBLIC_COMPANIES_URL=https://companies.autamedica.com
NEXT_PUBLIC_ADMIN_URL=https://admin.autamedica.com
