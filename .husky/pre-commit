#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Pre-commit: Validaciones de cÃ³digo..."

# 1. Validar convenciones de nomenclatura (SSK_FAE/Router)
echo "ğŸ“‹ Validando convenciones (SSK_FAE, Router)..."
node scripts/validate-conventions.mjs || {
  echo "âŒ Convenciones violadas. Ver errores arriba."
  exit 1
}

# 2. Verificar estructura de Router (no pages/)
echo "ğŸ—‚ï¸  Verificando App Router (no pages/)..."
if ls -d apps/**/pages 2>/dev/null | grep -v node_modules | grep .; then
  echo "âŒ Se detectÃ³ directorio pages/ - AutaMedica usa App Router (app/)"
  exit 1
fi

# 3. Check if database-related files are being committed
DB_FILES=$(git diff --cached --name-only | grep -E "(supabase|database|schema|migration|sql)" || true)

if [ -n "$DB_FILES" ]; then
  echo "ğŸ“Š Archivos de base de datos detectados, ejecutando validaciÃ³n..."
  # DB Glossary check (rÃ¡pido)
  pnpm docs:db:ci || exit 1
  pnpm docs:db:check-diff || exit 1
else
  echo "âœ… No hay cambios en base de datos, omitiendo validaciÃ³n DB"
fi

# 4. Export validation (puede ser lento con muchos exports)
echo "ğŸ“ Validando exports vs glosario..."
pnpm docs:validate || exit 1

# 5. Lint staged files
echo "ğŸ§¹ Ejecutando lint en archivos staged..."
pnpm lint-staged || exit 1

echo "âœ… Pre-commit validations passed!"
